<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/title"
                android:id="@+id/textView"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="-90dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="145dp"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/americanButton"
                        android:src="@drawable/american"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/american"
                        android:id="@+id/textView2"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="145dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/indianButton"
                        android:src="@drawable/indian"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/indian"
                        android:id="@+id/textView3"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="145dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/middle_eastButton"
                        android:src="@drawable/middle_east"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/middle_east"
                        android:gravity="center"
                        android:id="@+id/textView4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="145dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/imageButton"
                        android:src="@drawable/chinese"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
