<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="450dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:id="@+id/americanButton"
                        android:src="@drawable/american"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/american"
                        android:id="@+id/americanText"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:id="@+id/indianButton"
                        android:src="@drawable/indian"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/indian"
                        android:id="@+id/indianText"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:id="@+id/middle_eastButton"
                        android:src="@drawable/middle_east"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/middle_east"
                        android:gravity="center"
                        android:id="@+id/middle_eastText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp"
                    android:layout_gravity="right">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:id="@+id/chineseButton"
                        android:src="@drawable/chinese"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chinese"
                        android:id="@+id/chineseText"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp"
                    android:layout_gravity="right">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:id="@+id/italianButton"
                        android:src="@drawable/italian"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/italian"
                        android:id="@+id/italianText"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="146dp"
                    android:layout_height="152dp"
                    android:layout_gravity="right">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:id="@+id/portugueseButton"
                        android:src="@drawable/portuguese"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/portuguese"
                        android:id="@+id/portugueseText"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
